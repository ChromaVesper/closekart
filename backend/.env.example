# Backend Environment Variables
# Copy this to .env and fill in your actual values

PORT=5000

# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/closekart?retryWrites=true&w=majority

# JWT secret key (use a long random string in production)
JWT_SECRET=your_super_secret_jwt_key_here

# Frontend URL (update after deploying frontend to Vercel)
CLIENT_URL=https://your-closekart.vercel.app

# Google OAuth (optional, only if using Google Sign-In)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://closekart-backend.onrender.com/api/auth/google/callback
